{
  // 统一使用 \n 换行符
  "files.eol": "\n",
  // 缩进宽度为 2
  "editor.tabSize": 2,
  // 保存时自动格式化
  "editor.formatOnSave": true,
  // 默认使用 Prettier 格式化
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // ESLint 保存时自动修复
  "eslint.autoFixOnSave": true,
  // ESLint 配置
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "typescript",
      // ts 文件需要配置 autoFix 才能开启自动修复
      "autoFix": true
    },
    {
      "language": "typescriptreact",
      // tsx 文件需要配置 autoFix 才能开启自动修复
      "autoFix": true
    }
  ],
  // 使用项目的 ts 版本
  "typescript.tsdk": "node_modules/typescript/lib",
  // 调试时自动附加到 node 进程
  "debug.node.autoAttach": "on"
}
